<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PasswordNotes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color.colorPrimary是标题栏颜色 -->
        <item name="colorPrimary">@color/system_gray_little</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color.状态栏颜色 -->
        <item name="android:statusBarColor">@color/system_gray_little</item>
        <!-- Customize your theme here. -->
        <!-- 设置状态栏字体颜色为黑白自适应 -->
        <item name="android:windowLightStatusBar">true</item>
        <!-- 设置默认光标颜色-->
        <item name="colorAccent">@color/system_gray_middle_up</item>
        <!-- 设置编辑框输入字体颜色 -->
        <item name="android:editTextColor">@color/system_gray_deep</item>
        <!-- 设置编辑框提示字体颜色 -->
        <item name="android:textColorHint">@color/system_gray_middle_up</item>

        <item name="android:queryHint">#808080</item>


    </style>
</resources>