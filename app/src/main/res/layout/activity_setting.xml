<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingActivity">

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/setting_hidden_item_list_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="@string/setting_hidden_item_list_name_text"
        android:textColor="@color/system_gray_deep"
        android:textSize="18sp"
        android:textStyle="bold"
        android:thumb="@drawable/switch_thumb_selector"
        app:switchMinWidth="30dp"
        app:track="@drawable/switch_track_selector" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="1dp"
        android:alpha="0.1"
        android:background="@color/system_gray_middle_up" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/setting_hidden_item_list_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="@string/setting_hidden_item_list_password_text"
        android:textColor="@color/system_gray_deep"
        android:textSize="18sp"
        android:textStyle="bold"
        android:thumb="@drawable/switch_thumb_selector"
        app:switchMinWidth="30dp"
        app:track="@drawable/switch_track_selector" />

</androidx.appcompat.widget.LinearLayoutCompat>