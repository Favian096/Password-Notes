<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize">

    <!--  搜索框  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/baseline_menu"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="-15dp"
            android:background="@color/system_gray_little"
            android:paddingHorizontal="15dp"
            android:src="@drawable/baseline_menu_24" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/action_bar_title"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="?attr/actionBarSize"
            android:maxLines="1"
            android:paddingHorizontal="5dp"
            android:gravity="center_vertical"
            android:text="@string/action_bar_title_text"
            android:textColor="@color/system_gray_deep"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.SearchView
            android:id="@+id/action_bar_search_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:minWidth="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center_vertical"
            app:searchHintIcon="@drawable/baseline_search_lighter_24"
            app:closeIcon="@drawable/baseline_clear_24"
            app:queryHint="@string/action_bar_search_view_hint_text"
            android:backgroundTint="@color/system_gray_middle_up"
            app:searchIcon="@drawable/baseline_search_24" />

    </LinearLayout>

</FrameLayout>
