<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_list_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:transitionName="item_translation_anim">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_list_card_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/system_gray_little"
        app:cardCornerRadius="10dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/item_list_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_list_water_selector"
            android:clickable="true"
            android:focusable="true"
            android:longClickable="true"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/item_list_card_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/item_list_card_header_menu"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:alpha="0.8"
                    app:cardBackgroundColor="@color/system_red"
                    app:cardCornerRadius="4dp" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/item_list_card_header_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="8dp"
                    android:text="标签名称"
                    android:textSize="15dp" />


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_list_card_body_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="Favian096"
                android:textColor="@color/system_gray_deep"
                android:textSize="17dp"
                android:textStyle="bold" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_margin="6dp"
                android:background="@color/system_gray_middle" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_list_card_body_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:text="comLy151515455454454"
                android:textColor="@color/system_gray_deep"
                android:textSize="17dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_list_card_footer_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="没有备注......"
                android:textColor="@color/system_gray_middle_up"
                android:textSize="13dp"
                android:textStyle="italic" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.cardview.widget.CardView>


</androidx.appcompat.widget.LinearLayoutCompat>